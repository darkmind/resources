<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sp_health"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight=".25"
    android:gravity="top"
    android:onClick="switch_screen"
    android:background="#0099cc"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight=".2">
        <TextView
            android:id="@+id/special_health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:keepScreenOn="true"
            android:text="@string/health"
            android:textColor="#33b5e5"
            android:textSize="50sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/special_limit_health"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:gravity="end"
            android:keepScreenOn="true"
            android:text="0"
            android:textColor="#33b5e5"
            android:textSize="50sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:id="@+id/image_health1" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:id="@+id/image_health2" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:id="@+id/image_health3"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:id="@+id/image_health4"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:id="@+id/image_health5"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:id="@+id/image_health6"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:id="@+id/image_health7"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:id="@+id/image_health8"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:id="@+id/image_health9"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:id="@+id/image_health10"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:id="@+id/image_health11"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:id="@+id/image_health12"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:id="@+id/image_health13" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:id="@+id/image_health14" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#0099cc"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:text="-"
            android:onClick="minus_button"
            android:id="@+id/health_minus_b" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:text="@string/reset"
            android:onClick="reset_button"
            android:id="@+id/health_reset_b" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:onClick="plus_button"
            android:text="+"
            android:id="@+id/health_plus_b" />
    </LinearLayout>
</LinearLayout>