<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sp_rage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight=".25"
    android:gravity="top"
    android:onClick="switch_screen"
    android:orientation="vertical">
    <TextView
        android:id="@+id/special_rage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".2"
        android:gravity="top"
        android:keepScreenOn="true"
        android:text="@string/rage"
        android:textColor="#33b5e5"
        android:textSize="50sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".2"
        android:background="#0099cc"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/radio_button_rage1"
            android:onClick="radio_button_clicked"
            android:layout_weight=".2" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_button_rage2"
            android:onClick="radio_button_clicked"
            android:layout_weight=".2" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_button_rage3"
            android:onClick="radio_button_clicked"
            android:layout_weight=".2"
            android:checked="false" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_button_rage4"
            android:onClick="radio_button_clicked"
            android:layout_weight=".2" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_button_rage5"
            android:onClick="radio_button_clicked"
            android:layout_weight=".2" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_button_rage6"
            android:onClick="radio_button_clicked"
            android:layout_weight=".2" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="radio_button_clicked"
            android:id="@+id/radio_button_rage7"
            android:layout_weight=".2" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_button_rage8"
            android:onClick="radio_button_clicked"
            android:layout_weight=".2" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_button_rage9"
            android:onClick="radio_button_clicked"
            android:layout_weight=".2" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="radio_button_clicked"
            android:id="@+id/radio_button_rage10"
            android:layout_weight=".2" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".2"
        android:background="#0099cc"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:id="@+id/image_rage1" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:id="@+id/image_rage2" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:id="@+id/image_rage3" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:layout_weight=".2"
            android:id="@+id/image_rage4" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:layout_weight=".2"
            android:id="@+id/image_rage5" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:layout_weight=".2"
            android:id="@+id/image_rage6" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:id="@+id/image_rage7" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:id="@+id/image_rage8" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:id="@+id/image_rage9" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:id="@+id/image_rage10" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".2"
        android:background="#0099cc"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:text="@string/char_minus"
            android:onClick="minus_button"
            android:id="@+id/rage_minus_b" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:text="@string/reset"
            android:onClick="reset_button"
            android:id="@+id/rage_reset_b" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:onClick="plus_button"
            android:text="@string/char_plus"
            android:id="@+id/rage_plus_b" />
    </LinearLayout>
</LinearLayout>