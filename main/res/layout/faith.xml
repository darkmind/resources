<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sp_faith"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight=".25"
    android:gravity="top"
    android:onClick="switch_screen"
    android:background="#0099cc"
    android:orientation="vertical">
    <TextView
        android:id="@+id/special_faith"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".2"
        android:gravity="top|start"
        android:keepScreenOn="true"
        android:text="@string/faith"
        android:textColor="#33b5e5"
        android:textSize="50sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".2"
        android:background="#0099cc"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_button_faith1"
            android:onClick="radio_button_clicked"
            android:layout_weight=".2" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_button_faith2"
            android:onClick="radio_button_clicked"
            android:layout_weight=".2" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="radio_button_clicked"
            android:id="@+id/radio_button_faith3"
            android:layout_weight=".2" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="radio_button_clicked"
            android:id="@+id/radio_button_faith4"
            android:layout_weight=".2" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="radio_button_clicked"
            android:id="@+id/radio_button_faith5"
            android:layout_weight=".2" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="radio_button_clicked"
            android:id="@+id/radio_button_faith6"
            android:layout_weight=".2" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="radio_button_clicked"
            android:id="@+id/radio_button_faith7"
            android:layout_weight=".2" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_button_faith8"
            android:onClick="radio_button_clicked"
            android:layout_weight=".2" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_button_faith9"
            android:onClick="radio_button_clicked"
            android:layout_weight=".2" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_button_faith10"
            android:onClick="radio_button_clicked"
            android:layout_weight=".2" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".2"
        android:background="#0099cc"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:id="@+id/image_faith1" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:id="@+id/image_faith2" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:id="@+id/image_faith3" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:layout_weight=".2"
            android:id="@+id/image_faith4" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:layout_weight=".2"
            android:id="@+id/image_faith5" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:layout_weight=".2"
            android:id="@+id/image_faith6" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:id="@+id/image_faith7" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:id="@+id/image_faith8" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:id="@+id/image_faith9" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:src="@drawable/ic_crop_din_black_24dp"
            android:id="@+id/image_faith10" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".2"
        android:background="#0099cc"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:text="-"
            android:onClick="minus_button"
            android:id="@+id/faith_minus_b" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:onClick="reset_button"
            android:text="@string/reset"
            android:id="@+id/faith_reset_b" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:text="+"
            android:onClick="plus_button"
            android:id="@+id/faith_plus_b" />
    </LinearLayout>
</LinearLayout>